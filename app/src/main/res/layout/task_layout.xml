<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.violenthoboenterprises.taskkiller.MainActivity"
    android:background="@color/white">

    <TableRow
        android:id="@+id/taskName">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/textView"
            android:padding="15dp"
            android:layout_weight="4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/dueTextView"
            android:padding="15dp"
            android:layout_marginTop="40dp"
            android:layout_weight="4"/>

        <ImageView
            android:id="@+id/due"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/due"
            android:layout_weight="1"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/dueRed"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/due_red"
            android:layout_weight="1"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/checklistIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/checklist"
            android:layout_weight="1"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/noteIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/note"
            android:layout_weight="1"
            android:visibility="gone"/>
    </TableRow>

    <TableRow>
        <LinearLayout>
            <include
                layout="@layout/task_properties_layout"
                android:id="@+id/properties"
                android:visibility="gone"/>
            <include
                layout="@layout/date_layout"
                android:id="@+id/dateTime"
                android:visibility="gone"/>
            <include
                layout="@layout/options"
                android:id="@+id/options"
                android:visibility="gone"/>
            <include
                layout="@layout/alarm_options"
                android:id="@+id/alarmOptions"
                android:visibility="gone"/>
            <include
                layout="@layout/repeat_layout"
                android:id="@+id/repeat"
                android:visibility="gone"/>
        </LinearLayout>
    </TableRow>

</TableLayout>
