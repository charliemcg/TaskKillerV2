<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.violenthoboenterprises.taskkiller.MainActivity"
    android:background="@color/dark_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/oneHour"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/layout_border">

            <TextView
                android:id="@+id/oneHourBtnText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="1"
                android:gravity="center"
                android:text="1 Hour"
                android:textColor="@color/gray"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourHours"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/layout_border">

            <TextView
                android:id="@+id/fourHoursBtnText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="1"
                android:gravity="center"
                android:text="4 Hours"
                android:textColor="@color/gray"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tomorrow"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/layout_border">

            <TextView
                android:id="@+id/tomorrowBtnText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="1"
                android:gravity="center"
                android:text="Tomorrow"
                android:textColor="@color/gray"/>

        </LinearLayout>

    </LinearLayout>

</TableRow>
