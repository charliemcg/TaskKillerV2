<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.violenthoboenterprises.taskkiller.MainActivity"
    android:orientation="vertical"
    android:id="@+id/activityRoot">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        style="@style/HeaderBar"
        app:subtitle="No Excuses"
        app:subtitleTextColor="@color/gray"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.MyTheme"
        android:soundEffectsEnabled="false"/>

    <LinearLayout
        android:id="@+id/colorPicker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/color_picker_border_white"
        android:elevation="4dp"
        android:layout_margin="30dp"
        android:visibility="gone">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow>
                <TextView
                    android:id="@+id/colorPickerTitle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:textColor="@color/gray"
                    android:layout_margin="20dp"
                    android:layout_span="4"
                    android:text="@string/pickAColor"/>
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_button"
                    android:onClick="setHighlightWhite"
                    android:soundEffectsEnabled="false"/>

                <Button
                    android:id="@+id/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/black_button"
                    android:onClick="setHighlightBlack"
                    android:soundEffectsEnabled="false"/>

                <Button
                    android:id="@+id/lightYellow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/lyellow_button"
                    android:onClick="setHighlightLightYellow"
                    android:soundEffectsEnabled="false"/>

                <Button
                    android:id="@+id/darkYellow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/dyellow_button"
                    android:onClick="setHighlightDarkYellow"
                    android:soundEffectsEnabled="false"/>

            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/lightBlue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/lblue_button"
                    android:onClick="setHighlightLightBlue"
                    android:soundEffectsEnabled="false"/>

                <Button
                    android:id="@+id/darkBlue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/dblue_button"
                    android:onClick="setHighlightDarkBlue"
                    android:soundEffectsEnabled="false"/>

                <Button
                    android:id="@+id/lightOrange"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/lorange_button"
                    android:onClick="setHighlightLightOrange"
                    android:soundEffectsEnabled="false"/>

                <Button
                    android:id="@+id/darkOrange"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/dorange_button"
                    android:onClick="setHighlightDarkOrange"
                    android:soundEffectsEnabled="false"/>

            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/lightPurple"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/lpurple_button"
                    android:onClick="setHighlightLightPurple"
                    android:soundEffectsEnabled="false"/>

                <Button
                    android:id="@+id/darkPurple"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/dpurple_button"
                    android:onClick="setHighlightDarkPurple"
                    android:soundEffectsEnabled="false"/>

                <Button
                    android:id="@+id/lightRed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/lred_button"
                    android:onClick="setHighlightLightRed"
                    android:soundEffectsEnabled="false"/>

                <Button
                    android:id="@+id/darkRed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/dred_button"
                    android:onClick="setHighlightDarkRed"
                    android:soundEffectsEnabled="false"/>

            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/lightPink"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/lpink_button"
                    android:onClick="setHighlightLightPink"
                    android:soundEffectsEnabled="false"/>

                <Button
                    android:id="@+id/darkPink"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/dpink_button"
                    android:onClick="setHighlightDarkPink"
                    android:soundEffectsEnabled="false"/>

                <Button
                    android:id="@+id/lightGreen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/lgreen_button"
                    android:onClick="setHighlightLightGreen"
                    android:soundEffectsEnabled="false"/>

                <Button
                    android:id="@+id/darkGreen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/dgreen_button"
                    android:onClick="setHighlightDarkGreen"
                    android:soundEffectsEnabled="false"/>

            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/purchases"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/color_picker_border_white"
        android:elevation="4dp"
        android:layout_margin="30dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/removeAds"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:onClick="removeAds"
            android:background="@drawable/purchases_dropshadow"
            android:soundEffectsEnabled="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/removeAdsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="@string/removeAds"/>

                <TextView
                    android:id="@+id/removeAdsDescription"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/permanentlyRemoveAds"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/removeAdsImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:src="@drawable/remove_ads"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/getReminders"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:onClick="getReminders"
            android:background="@drawable/purchases_dropshadow"
            android:soundEffectsEnabled="false">

            <ImageView
                android:id="@+id/getRemindersImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:src="@drawable/bell"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/getRemindersTitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="@string/getReminders"/>

                <TextView
                    android:id="@+id/getremindersDescription"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/setUnlimitedDueDates"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cycleColors"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:onClick="cycleColors"
            android:background="@drawable/purchases_dropshadow"
            android:soundEffectsEnabled="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cycleColorsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="@string/cycleColors"/>

                <TextView
                    android:id="@+id/cycleColorsDescription"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/featureColorSlowly"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/cycleColorsImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:src="@drawable/color_cycle"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/unlockAll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:onClick="unlockAll"
            android:orientation="horizontal"
            android:background="@drawable/purchases_dropshadow"
            android:soundEffectsEnabled="false">

            <ImageView
                android:id="@+id/unlockAllImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:src="@drawable/unlock_all"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/unlockAllTitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="@string/unlockAll"/>

                <TextView
                    android:id="@+id/unlockAllDescription"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/ultimateValuePack"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/showDb"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="100dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="DB"/>
    <!--<Button-->
        <!--android:id="@+id/showAlarmDb"-->
        <!--android:layout_marginTop="50dp"-->
        <!--android:layout_marginLeft="100dp"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:text="Time"/>-->
    <!--<Button-->
        <!--android:id="@+id/showUniversalDb"-->
        <!--android:layout_marginTop="500dp"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:text="Universal DB"/>-->
    <Button
        android:id="@+id/showSubtasksDb"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="200dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Subtasks DB"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/theListView"
        android:layout_below="@+id/my_toolbar"
        android:background="@color/dark_gray"
        android:descendantFocusability="blocksDescendants"
        android:soundEffectsEnabled="false"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/noTasks"
        android:src="@drawable/no_tasks_dark"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/noTasksWhite"
        android:src="@drawable/no_tasks_light"/>

    <EditText
        android:id="@+id/taskNameEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:maxLines="1"
        android:maxLength="50"
        android:inputType="textCapSentences"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:hint="@string/taskTitle"
        android:imeOptions="actionDone"/>

    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <Button
            android:id="@+id/add"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#00FFFFFF"
            android:soundEffectsEnabled="false"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/addIcon"
            android:text="+"
            android:gravity="center"
            android:textSize="140sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/toast"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="470dp"
        android:textColor="@color/dark_gray"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"/>

</RelativeLayout>
