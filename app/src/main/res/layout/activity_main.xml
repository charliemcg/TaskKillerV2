        <!--android:id="@+id/showAlarmDb"-->
        <!--android:layout_marginTop="50dp"-->
        <!--android:layout_marginLeft="100dp"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:text="Time"/>-->
