<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.violenthoboenterprises.taskkiller.MainActivity"
    android:background="@color/dark_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/alarm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/layout_border">

            <TextView
                android:id="@+id/alarmBtnText"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:lines="1"
                android:text="@string/setDue"
                android:paddingLeft="8dp"
                android:gravity="center"
                android:textColor="@color/gray"/>

            <ImageView
                android:id="@+id/alarmBtnIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/due_icon_dark"
                android:background="@color/gray"/>

            <ImageView
                android:id="@+id/alarmBtnIconWhite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/due_icon_light"
                android:background="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/subTasks"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/layout_border">

            <TextView
                android:id="@+id/subtasksBtnText"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:lines="1"
                android:text="@string/subTasks"
                android:paddingLeft="8dp"
                android:gravity="center"
                android:textColor="@color/gray"/>

            <ImageView
                android:id="@+id/subTasksBtnIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/subtasks_icon_dark"
                android:background="@color/gray"/>

            <ImageView
                android:id="@+id/subTasksBtnIconWhite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/subtasks_icon_light"
                android:background="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/note"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/layout_border">

            <TextView
                android:id="@+id/noteBtnText"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:lines="1"
                android:text="@string/addNote"
                android:paddingLeft="8dp"
                android:gravity="center"
                android:textColor="@color/gray"/>

            <ImageView
                android:id="@+id/noteBtnIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/note_icon_dark"
                android:background="@color/gray"/>

            <ImageView
                android:id="@+id/noteBtnIconWhite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/note_icon_light"
                android:background="@color/black"/>

        </LinearLayout>

    </LinearLayout>

</TableRow>